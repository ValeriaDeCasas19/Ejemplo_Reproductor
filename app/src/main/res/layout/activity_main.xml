<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7BDE2"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/black"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/imagenes"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:src="@mipmap/ic_launcher"
            android:padding="2dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tiempo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="3dp"/>

        <SeekBar
            android:id="@+id/seek1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tiempo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Atras"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@mipmap/atras"
            android:layout_marginEnd="1dp"/>

        <ImageView
            android:id="@+id/Stop"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@mipmap/stop"
            android:layout_marginEnd="1dp"/>

        <ImageView
            android:id="@+id/Pause"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@mipmap/pausa"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"/>

        <ImageView
            android:id="@+id/Play"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@mipmap/play"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"/>

        <ImageView
            android:id="@+id/Siguiente"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@mipmap/siguiente"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnSeleccionarCancion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="Seleccionar CanciÃ³n"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"/>

    <Switch
        android:id="@+id/switch1"
        android:layout_marginTop="16dp"
        android:layout_width="50dp"
        android:layout_height="25dp"/>


</LinearLayout>
